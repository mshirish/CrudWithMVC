﻿
@model IEnumerable<Product>;
@{
    ViewData["Title"] = "Product Management";
}

<h3>@ViewData["Title"]</h3>

<p>
    <a asp-action="CreateProduct" asp-controller="Product" class="btn btn-primary">Add</a>
</p>


<table class="table table-responsive table-hover table-striped shadow">
    <thead class="table-dark center">
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.ExpiryDate)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <tr class="text-center">
                    <th>
                        @Html.DisplayFor(item => product.Name)
                    </th>
                    <th>
                        @Html.DisplayFor(item => product.Category)
                    </th>
                    <th>
                        @Html.DisplayFor(item => product.Price)
                    </th>
                    <th>
                        @Html.DisplayFor(item => product.ExpiryDate)
                    </th>
                    <th>
                        <a>View Details</a>
                        <a>Edit</a>
                        <a>Delete</a>
                    </th>
                </tr>
            }

        }
    </tbody>
</table>

