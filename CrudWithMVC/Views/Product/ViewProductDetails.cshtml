@model CrudWithMVC.Models.Product;
@using CrudWithMVC.Enums;
@{
	ViewData["Title"] = "Product Details";
}

<h3>@ViewData["Title"]</h3>
<hr />

@using (Html.BeginForm("CreateProduct", "Product"))
{
	<div class="form-group">
		@Html.LabelFor(m => m.Name)
		@Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Category)
		@Html.TextBoxFor(m => m.Category, new { @class = "form-control", @readonly = "readonly" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Price)
		@Html.TextBoxFor(m => m.Price, new { @class = "form-control", @readonly = "readonly" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.ExpiryDate)
		@Html.TextBoxFor(m => m.ExpiryDate, new { @class = "form-control", @readonly = "readonly" })
	</div>
	<div class="form-group">
		<a class="btn btn-primary" asp-action="Index">Back to list</a>
	</div>
}